{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:3",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true
    }
  },
  "postCreateCommand": "pip3 install pygame tkinter",
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "VNC web client (noVNC)",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
